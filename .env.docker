# Verdleaf Docker Environment Variables
# Copy this file to .env and fill in your values

# ================================
# Database Configuration
# ================================
POSTGRES_USER=verdleaf
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=verdleaf

# ================================
# Google Gemini AI
# ================================
GEMINI_API_KEY=your_gemini_api_key_here

# ================================
# Web3 / RainbowKit Configuration
# ================================
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id
NEXT_PUBLIC_ALCHEMY_ID=your_alchemy_id

# ================================
# Solana Configuration (NFT Minting)
# ================================
SOLANA_NETWORK=devnet
SOLANA_AUTHORITY_PRIVATE_KEY=your_solana_private_key_base58_encoded
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# ================================
# Application Configuration
# ================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_SECRET=generate_a_random_32_char_secret
NEXTAUTH_URL=http://localhost:3000

# ================================
# Optional Services
# ================================
WEATHER_API_KEY=your_weather_api_key
